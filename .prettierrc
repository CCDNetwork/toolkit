{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json" }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": "*.mdoc",
      "options": {
        "parser": "markdown"
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-astro"]
}
